<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3f6272</item>
        <item name="colorPrimaryDark">#123847</item>
        <item name="colorAccent">#6c8fa1</item>
    </style>
    
    <style name="TextViewStyleBold" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewStyleNormal" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewStyleSmall" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
